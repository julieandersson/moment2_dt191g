@{
    ViewData["Title"] = "Startsida";
}
@model List<moment2_dt191g.Models.TripModel>

<h2 class="mb-4 text-center">Startsida</h2>
<h4>@ViewBag.Message</h4>
<p><strong>Dagens datum:</strong> @ViewBag.Today</p>

@if (!string.IsNullOrEmpty(ViewBag.LatestTripLocation))
{
    <div class="alert alert-success">
        <p><strong>Senaste tillagda resa:</strong> @ViewBag.LatestTripLocation</p>
    </div>
}

<h4 class="fs-5">Platser jag har besökt:</h4>

<div class="row">
    @foreach (var trip in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card custom-blue shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@trip.Country - @trip.City</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Betyg: @trip.Rating ★</h6>
                    <p class="card-text">
                        <strong>Datum:</strong> @trip.StartDate?.ToString("yyyy-MM-dd") → @trip.EndDate?.ToString("yyyy-MM-dd")
                    </p>
                </div>
            </div>
        </div>
    }
</div>